# Servidor
PORT=3500
SERVER_URL=http://localhost:3500

# Lector RFID - Puerto serie
# Dejar vacío para autodetección o especificar el puerto (ej: /dev/ttyUSB0 en Linux, COM3 en Windows)
RFID_SERIAL_PATH=
RFID_BAUD=115200

# Modo MOCK - Para desarrollo sin hardware
# Configurar MOCK_RFID=true para simular lecturas sin el lector físico
MOCK_RFID=false
MOCK_UID=MOCK-UID-1234

# Base de datos (opcional - solo si usas funciones de BD)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=nombre_bd
